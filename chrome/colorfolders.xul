<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="chrome://colorfolders/content/colorfolders.css"?>
<!DOCTYPE overlay SYSTEM "chrome://colorfolders/locale/colorfolders.dtd">

<!--
